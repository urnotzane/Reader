/* pages/books/books.wxss */
page{
  padding: 0;
  margin: 0;
  overflow-x: hidden;
  color: #515151;
}
.container{
  width: 100%;
  height:100%;
  overflow: hidden;
}
.con-item {
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: row;
  flex-direction: row;
  width: 100%;
  font-size: 16px;
  position: fixed;
  top: 0px;
}
.classify{
  width: 100%;
  text-align: center;
  height: 20px;
  padding: 15px;
  background-color: #f6f6f6;
  color: #ff6666;
}
.class-detail{
  text-align: center;
  font-size: 16px;
  line-height: 20px;
  background-color: #ffffff;
  color: #515151;
  width: 100%;
  margin-top: -2px;
}
.class-detail view{
  width: 100%;
  padding: 15px 0px;
  border-bottom: 1px solid #f6f6f6;
  display: inline-block;
}
.class-detail text {
  width: 50%;
  display: inline-block;
}

