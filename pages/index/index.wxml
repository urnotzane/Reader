<!--index.wxml-->
<view class="container">
  <view class='con-item'>
    <view>
      <input class='items-input' placeholder='查找书架中的图书' confirm-type='search' style="width:{{ win_w-50 + 'px' }};"/>
    </view>
  </view> 
    
  <view class='con-item bookracks'>
    <view class='bookracks-item' style="width:{{ win_w-40 + 'px'}}">
      <view class='book-list' wx:for="{{book_detail}}" wx:key="key" wx:for-item="items" >
        <view class='bookcover'></view>
        <text>{{items.name}}</text>
      </view>
      <view class='book-list'>
        <view class='bookcover'>
          <image class='add-image' src='images/add-book.png'></image>
        </view>
        <text></text>
      </view>
    </view>
    <view class='bookracks-item'>
      <view class='books-edit'>
        <text>书籍管理</text>
      </view>
    </view>
  </view>
</view>
