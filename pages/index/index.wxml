<!--index.wxml-->
<view class="container">
  <view class='con-item' style="width:{{ win_w-30 + 'px'}}">
    <view>
      <input class='items-input' placeholder='查找书架中的图书' confirm-type='search' style="width:{{ win_w-55 + 'px' }};"/>
    </view>
  </view> 
  <view class='con-item bookracks' style="width:{{ win_w-40 + 'px'}}" >
    <view class='bookracks-item' style="width:{{ win_w-40 + 'px'}}">
      <view class='book-list' wx:for="{{book_detail}}" wx:key="key" wx:for-item="items"  catchtap="bookTapAnimation"  data-chanid="{{items.id}}" style="padding:{{ listpadding + 'px'}}" >
        <view >
          <image class="booksrc" src="{{items.src}}" >
            <icon class="whitedot" hidden="{{hidden}}" type="success" size="20" color="{{items.iconcol}}" ></icon>
          </image>
        </view>
        <text>{{items.name}}</text>
      </view>
      <view class='book-list' style="padding:{{ listpadding + 'px'}}" >
        <view class='bookcover'>
          <image class='add-image' src='images/add-book.png'></image>
        </view>
        <text></text>
      </view>
    </view>
    <view class='bookracks-item' catchtap="bookManaOpt">
      <view class='books-edit'>
        <text>书籍管理</text>
      </view>
    </view>
  </view>
  <view class="editoption con-item" hidden="{{hidden}}" >
      <view class="editcomplete" catchtap="bookManaOpt" >完成</view>
      <view class="editdelete" catchtap="selectDelete" >删除</view>
      <view class="editall" catchtap="selectAll">全选</view>
  </view>
</view>
