/**index.wxss**/
page{
  padding: 0;
  margin: 0;
  overflow-x: hidden;
  color: #515151;
}
.container,.bookracks{
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
  width: 100%;
  height:100%;
  overflow-x: hidden;
}
.con-item{
  width: 100%;
  padding: 10px 15px 0px 15px;
  margin-bottom: 10px;
}
.items-input{
  height:20px;
  padding:10px;
  background-color: #f6f6f6;
  border-radius: 3px;
}
.bookracks-item{
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-flex-wrap: nowrap;
  flex-wrap: wrap;
  padding: 5px;
  margin-bottom: 5px;
}
.book-list{
  width: 90px;
  height:160px;
  padding-bottom: 25px;
}
.bookcover{
   width: 88px;
   height: 120px;
   border: 1px solid #f6f6f6;
}
.book-list text{
  font-size: 12px;
  line-height: 15px;
}
.add-image{
  width: 45px;
  height: 45px;
  margin: 38px 26px 0px 22px;
}
.books-edit{
  width: 100px;
  height: 20px;
  font-size: 14px;
  padding: 5px;
  text-align: center;
  margin: 0 auto;
  border: 1px solid #f6f6f6;
  border-radius: 3px;
}
