/**index.wxss**/
page{
  padding: 0;
  margin: 0;
  overflow-x: hidden;
  color: #515151;
}
.container,.bookracks{
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
  width: 100%;
  height:100%;
  overflow-x: hidden;
}
.con-item{
  width: 100%;
  padding: 10px 15px 0px 15px;
  margin-bottom: 10px;
  overflow-x: hidden;
}
.items-input{
  height:20px;
  padding:10px;
  background-color: #f6f6f6;
  border-radius: 3px;
}
.bookracks-item,.editoption{
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
  flex-wrap: wrap;
  overflow-x: hidden;
}
.editoption{
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 5px;
  overflow-x: hidden;
}
.book-list{
  width: 75px;
  height:140px;
  padding-bottom: 20px;
  overflow-y: hidden;
}
.book-list text{
  display: inline-block;
  height: 80px;
}
.whitedot{
  width: 20px;
  height: 20px;
  border-radius: 10px;
  margin: -25px 0px 0 50px;
  display: block;
  background-color: #ffffff;
}
.bookcover{
   width: 73px;
   height: 100px;
   border: 1px solid #f6f6f6;
}
.booksrc{
  width: 75px;
  height: 100px;
}
.book-list text{
  font-size: 12px;
  line-height: 15px;
}
.add-image{
  width: 35px;
  height: 35px;
  margin: 33px 20px;
}
.books-edit{
  width: 100px;
  height: 20px;
  font-size: 14px;
  padding: 5px;
  text-align: center;
  margin: 0 auto;
  border: 1px solid #f6f6f6;
  border-radius: 3px;
}
.editoption{
  border-top: 1px solid #f6f6f6;
  position: fixed;
  bottom: -5px;
  background-color: #ffffff;
  overflow-x: hidden;
}
.editcomplete,.editdelete,.editall{
  width: 80px;
  height: 20px;
  font-size: 14px;
  text-align: center;
  line-height: 25px;
}
.editdelete{
  color: #ff6666;
}
